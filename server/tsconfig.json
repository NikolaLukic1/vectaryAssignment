{  
    "compilerOptions":{  
       "module":"commonjs",
       "moduleResolution":"node",
       "pretty":true,
       "sourceMap":true,
       "outDir":"build",
       "baseUrl":"src",
       "emitDecoratorMetadata":true,
       "experimentalDecorators":true,
       "esModuleInterop": true,
       "resolveJsonModule": true,
       "target":"es6",
       "typeRoots":[  
          "node_modules/@types"
       ]
    },
    "include":[  
       "src/**/*.ts", "src/index.js", "src/index.js","../envConfig.ts"    ],
    "exclude":[  
       "node_modules"
    ]
 }